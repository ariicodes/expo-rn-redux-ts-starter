{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": ["config:recommended", ":maintainLockFilesWeekly"],
	"packageRules": [
		{
			"matchManagers": ["npm"],
			"groupName": "all npm deps",
			"schedule": ["before 9am on sunday"]
		},
    {
			"matchPackagePatterns": ["^expo"],
			"groupName": "Expo SDK"
		},
    {
			"matchPackagePatterns": ["^react", "react-native"],
			"groupName": "React + React Native"
		},
    {
			"matchPackagePatterns": ["eslint", "jest", "typescript"],
			"groupName": "Dev Tooling"
		}
	]
}
