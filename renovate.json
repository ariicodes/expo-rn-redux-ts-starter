{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": [
		"config:recommended",
		":maintainLockFilesWeekly"
	],
	"packageRules": [
		{
			"matchManagers": [
				"npm"
			],
			"groupName": "all npm deps",
			"schedule": [
				"before 9am on sunday"
			]
		},
		{
			"groupName": "Expo SDK",
			"matchPackageNames": [
				"/^expo/"
			]
		},
		{
			"groupName": "React + React Native",
			"matchPackageNames": [
				"/^react/",
				"/react-native/"
			]
		},
		{
			"groupName": "Dev Tooling",
			"matchPackageNames": [
				"/eslint/",
				"/jest/",
				"/typescript/"
			]
		}
	]
}
